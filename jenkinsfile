pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
           echo 'ğŸ”„ Cloning the repository...'
           git url: 'https://github.com/vrajurkar95/React-webapp.git', branch: 'main'
           echo 'âœ… Repository cloned successfully jeee bat....'
        }
      }
    

    stage('Build') {
      steps {
        echo 'ğŸ—ï¸ Building the code...'
        sh "docker build -t react-webapp:latest ."
      }
    }

    stage('Test') {
      steps {
        echo 'ğŸ§ª Running tests...'
        // sh 'npm test'
      }
    }
    
    stage('deploy') {
      steps {
        echo 'ğŸš€ Deploying Docker Compose servicesâ€¦'
        sh 'docker compose up -d'
      }
    }
  }

  post {
    always {
      echo 'ğŸ Pipeline completed.'
    }
    success {
      echo 'ğŸ‰ Build succeeded!'
    }
    failure {
      echo 'âŒ Build failed.'
    }
  }
}
